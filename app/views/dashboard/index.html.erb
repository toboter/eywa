<% title 'Dashboard' %>

<% if logged_in? %>

<%= session.inspect %><br />
<%= current_user.username %>

<h4>Projects</h4>
<% for project in @projects %>
  <p><%= link_to "#{project.owner.username} / #{project.name}", account_project_path(project.owner, project) %>
  	<%= link_to "Delete", account_project_path(project.owner, project), :confirm => 'Are you sure?', :method => :delete %><p>
<% end %>
<p><%= link_to 'Your Profile', account_path(current_user) %></p>
<% end %>

<h4>Users</h4>
<% for user in @users %>
  <p><%= link_to "#{user.username}", account_path(user) %> | 
  	<%= link_to "Delete", account_path(user), :confirm => 'Are you sure?', :method => :delete %><p>
<% end %>

<h4>Organisations</h4>
<% for organisation in @organisations %>
  <p><%= link_to "#{organisation.username}", account_path(organisation) %> | 
  	<%= link_to "Delete", account_path(organisation), :confirm => 'Are you sure?', :method => :delete %><p>
<% end %>