<div class="field">
<p>
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</p>
<p>
  <%= f.label :comment %><br />
  <%= f.text_area :comment, :size => "40x5" %>
</p>
<p>
  <%= f.label :metaclass %> <%= f.check_box :metaclass %>
</p>

<% unless @definition.is_root? || @definition.new_record? %>
  <p>
    <%= f.label :parent_id, 'Move to a new parent' %><br />
    <%= f.collection_select :parent_id, @upper_family, :id, :definition_name %>
  </p>
<% end %>

<h4>Descriptions</h4>
<%= f.fields_for :descriptions do |builder| %>
  <%= render "description_fields", :f => builder %>
<% end %>
<p><%= f.link_to_add "Add a Description", :descriptions %></p>
</div>