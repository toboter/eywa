<% title "Update Profile" %>

<%= form_for @user do |f| %>
  <%= f.error_messages %>
  <div id="edit">
    <div id="profile">
	    <p>
        <%= f.label :fullname %><br />
        <%= f.text_field :fullname %>
      </p>
      <p>
        <%= f.label :public_email, "Email (will be public)" %><br />
        <%= f.text_field :public_email %>
      </p>
      <p>
        <%= f.label :url, "URL" %><br />
        <%= f.text_field :url %>
      </p>
      <p>
        <%= f.label :institution %><br />
        <%= f.text_field :institution %>
      </p>
      <p>
        <%= f.label :location %><br />
        <%= f.text_field :location %>
      </p>
      <p>
        <%= f.label :interests %><br />
        <%= f.text_area :interests %>
      </p>
    </div>

    <div id="settings">
      <p>
        <%= f.label :password %><br />
        <%= f.password_field :password %>
      </p>
      <p>
        <%= f.label :password_confirmation, "Confirm Password" %><br />
        <%= f.password_field :password_confirmation %>
      </p>
      <p>
        <%= f.label :username %><br />
        <%= f.text_field :username %>
      </p>
    </div>

    <div id="emails">
      <p>
    	   <%= f.label :email, "Email Address" %><br />
    	   <%= f.text_field :email %>
  	   </p>
  	   <p>Add another email address</p>
  	</div>

    <div id="organisation">
      <p>Turn <%= @user.username %> into an organisation <%= link_to 'here' %> <br />
      or create a <%= link_to 'new organisation', new_organisation_path %></p>
    </div>
  	
    <p><%= f.submit (@user.new_record? ? "Sign up" : "Update") %></p>
  </div>
<% end %>






