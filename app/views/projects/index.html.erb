<% title "Projects" %>

<table>
  <tr>
    <th>Name</th>
    <th>Shortcut</th>
  </tr>
  <% for project in @projects %>
    <tr>
      <td><%= project.name %></td>
      <td><%= project.shortcut %></td>
      <td><%= project.owner.username %></td>
      <td><%= link_to "Show", user_project_path(project.owner, project) %></td>
      <td><%= link_to "Edit", edit_user_project_path(project.owner, project) %></td>
      <td><%= link_to "Destroy", [project.owner, project], :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
