  <div class="tabs">
    <% if current_user == @project.owner %>
    <%= link_to image_tag("edit_settings.png", :alt => "Edit Projects Settings"), edit_account_project_path(@project.owner, @project) %>
    <%= link_to image_tag("delete-1.png", :alt => "Delete"), [@project.owner, @project], :confirm => 'Are you sure?', :method => :delete %>
    <% end %>
  </div>
  
<p><%= link_to "View all projects of the Owner", account_path(@project.owner) %></p>
<p><%= link_to "View definitions/concepts of the project", account_project_definitions_path(@project.owner, @project) %></p>

<p>
  <strong>Name:</strong>
  <%= @project.name %>
<p>
  <strong>Shortcut:</strong>
  <%= @project.shortcut %>
</p>
<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>
<p>
  <strong>Subject:</strong>
  Die Kategorie: Excavation, Stratigrafie, Philology, Archaeology
</p>


<% content_for :col2 do %>
  <h4>Members</h4>
  <ul>
    <% for membership in @project.memberships %>
      <li>
        <%= image_tag avatar_url(membership.account, 35) %>
        <%= link_to "#{membership.account.username}", account_path(membership.account) %> as a <%= membership.role %>
      </li>
    <% end %>

  </ul>
  <p>
    <strong>Owner:</strong>
    <%= @project.owner.username %>
  </p>
  <p>
    <strong>Created by </strong>
    <%= Account.find(@project.creator_id).username %>
  </p>
  <p>
    <strong>Last updated by </strong>
    <%= Account.find(@project.updater_id).username %>
  </p>
<% end %>