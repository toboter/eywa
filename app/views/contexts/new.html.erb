<% title "New Context" %>

<%= form_for [@owner, @project, @context], :url => account_project_contexts_path do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :definition_id %><br />
    <%= f.collection_select(:definition_id, Definition.where('project_id = ?', @project.id), :id, :name) %>
  </p>
  <p>
    <%= f.label :version_id %><br />
    <%= f.number_field :version_id %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <p><%= f.submit %></p>
<% end %>

<p><%= link_to "Back to List", account_project_contexts_path(@project.owner, @project) %></p>
